<div class="col-sm-3">
	<div class="card">
		<div class="card-header">
			<%if item.cat_picture.attached?%>
			<%= image_tag item.cat_picture, alt: "#{item.title}", class: "card-img" %>
			<%else%>
			<img src="" class="card-img" alt="img-cat">
			<% end %>
		</div>
		<div class="card-body">
			<%= link_to item.title, item_path(item.id), class: "btn btn-info" %>
		</div>
	</div>
</div>
