
<h1>Panier</h1>

<% if @cart.any? %>
	<ul class="list-group list-group-flush">
		<% @cart_array.each do |item| %>
		<li class="list-group-item d-flex justify-content-between">

			<p><%= item[:title] %> </p>

			<p>Prix : <%= item[:price] %></p>

			<p>Quantitée : <%= item[:qty] %></p>

			<p>Prix total : <%= item[:price] * item[:qty] %></p>

			<p><%= link_to "Supprimer", cart_path(item[:id]), method: :delete, class:"cart_item_delete", data: {confirm: 'Etes vous sûre ?'} %></p>
				
			</li>
		<% end -%>
	</ul>
	<div class="w-100 d-flex justify-content-end m-2">
		<h6>Prix total : <%= @cart_price %></h6>
	</div>
	<%= form_tag orders_path do %>
  	<article>
    	<% if flash[:error].present? %>
    	  <div id="error_explanation">
    	    <p><%= flash[:error] %></p>
    	  </div>
    	<% end %>
  	</article>

  	<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Payement"
          data-amount="<%= @cart_price * 100 %>"
          data-locale="auto"></script>
    <script>
        document.getElementsByClassName("stripe-button-el")[0].style.display = 'none';</script>
    <button type="submit" class="btn btn-info">Payer</button>
	<% end %>

<% else %>
	Votre panier est vide
<% end -%>
