<div class="w-100 d-flex f-middle f-column">
<%- if controller_name != 'sessions' %>

  <%= link_to "Connexion", new_session_path(resource_name) , class:"btn btn-primary btn-block m-2" %>

<% end %>


<%- if devise_mapping.registerable? && controller_name != 'registrations' %>

  <%= link_to "Inscription", new_registration_path(resource_name), class:"btn btn-secondary m-2" %>

<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>

  <%= link_to "Mot de passe oublié", new_password_path(resource_name), class:"btn btn-warning m-2" %>

<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Mail de confirmation non reçus ?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Mail de dévérouillage non reçus ?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Connexion avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end %>
<% end %>
</div>
