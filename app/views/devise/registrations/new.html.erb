<div class="d-flex justify-content-center flex-column align-items-center">
  <div class="card text-center" style="min-width: 30rem">
    <div class="card-header">
      <h4>Créer un compte</h4>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group d-flex flex-column align-items-start">
        <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email", placeholder:"Email" %>
      </div>
      <div class="form-group d-flex flex-column align-items-start">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> charactères minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Mot de passe"%>
      </div>
      <div class="form-group d-flex flex-column align-items-start">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Confirmation du mot de passe" %>
      </div>
      <%= f.submit "S'inscrire", class:"btn btn-primary btn-lg btn-block" %>

      <div class="card-footer">
        <div class="form-group">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>
