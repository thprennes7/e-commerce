<div class="carousel-item <% if index == 0 %> active <% end -%>" id="banner<%= banner.id %>">

  <div class="w-100 d-block banner_custom" style="height: 300px; background-image: url(<%= polymorphic_url(banner.banner_image) if banner.banner_image.attached? %>);"></div>

  <div class="carousel-caption d-none d-md-block">
    <h5><%= banner.title %></h5>

    <p><%= banner.description %></p>
  </div>
</div>
